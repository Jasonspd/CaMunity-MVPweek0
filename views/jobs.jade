extend layout

block content
	h1 Jobs available
	if jobs
		each job in jobs
			.panel.panel-primary
				.panel-heading | Title: #{job.title} | Pay: #{job.price} | Written by: #{job.client} | Date: #{job.dateAdded}      
					a.btn.btn-default(href='/job/#{job_id}') Go to job
				.panel-body Summary: #{job.summary}